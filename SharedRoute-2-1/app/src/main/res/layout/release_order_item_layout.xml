<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/express_image"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:src="@drawable/yd_express" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/type_image"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_type_book" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="书籍"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/send_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginEnd="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10月6日 16:30"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/send_location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginEnd="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:text="二区  十五公寓"
                android:textSize="8dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_none_receive_status" />

    </LinearLayout>

</android.support.v7.widget.CardView>