    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_header"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/nav_icon"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:src="@drawable/mainpage_ringphone"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wang"
                    android:textSize="14sp"
                    android:textColor="#85000000"/>

            </LinearLayout>

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="#b3000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="60dp">

            <TextView
                android:id="@+id/release_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today16:30"
                android:textSize="16sp"
                android:textColor="#b3000000"/>

            <TextView
                android:id="@+id/fetch_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Two 4"
                android:textSize="14sp"
                android:textColor="#85000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end">

            <ImageView
                android:id="@+id/status_image"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/mainpage_semimoon"/>

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YIJIE"
                android:textSize="16sp"
                android:textColor="#0097BA"/>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
