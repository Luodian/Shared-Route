<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_background"
    tools:context="com.example.administrator.sharedroute.activity.RegisterActivity">

    <!--<include-->
        <!--layout="@layout/back_layout"-->
        <!--android:title="@string/title_register"-->
        <!--android:elevation="4dp"/>-->
    <ProgressBar
        android:id="@+id/register_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/regiser_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/email_register_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TableLayout
                    android:layout_marginTop="72dp"
                    android:layout_marginRight="72dp"
                    android:layout_marginLeft="72dp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="姓名"
                            android:textSize="18sp"/>
                    </TableRow>
                    <TableRow>
                        <EditText
                            android:backgroundTint="@color/whitesmoke"
                            android:id="@+id/regi_name"
                            android:shadowColor="@color/white"
                            android:layout_width="0dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:textColor="@color/whitesmoke"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="学号"
                            android:textSize="18sp"/>
                    </TableRow>
                    <TableRow>
                        <EditText
                            android:backgroundTint="@color/whitesmoke"
                            android:id="@+id/regi_stu_num"
                            android:textColor="@color/whitesmoke"
                            android:inputType="text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:textColor="@color/whitesmoke"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="手机"
                            android:textSize="18sp"/>
                    </TableRow>
                    <TableRow>
                        <EditText
                            android:backgroundTint="@color/whitesmoke"
                            android:textColor="@color/whitesmoke"
                            android:textColorHint="@color/white"
                            android:id="@+id/regi_phone"
                            android:inputType="number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"/>
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="72dp"
                    android:layout_marginLeft="72dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/whitesmoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="邀请码"
                        android:textSize="18sp"/>
                    <EditText
                        android:backgroundTint="@color/whitesmoke"
                        android:textColor="@color/whitesmoke"
                        android:textColorHint="@color/white"
                        android:id="@+id/regi_invite_code"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TableLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="72dp"
                    android:layout_marginLeft="72dp"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>

                        <TextView
                            android:textColor="@color/whitesmoke"
                            android:textColorHint="@color/white"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="密码"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content">

                            <EditText
                                android:backgroundTint="@color/whitesmoke"
                                android:textColorHighlight="@color/white"
                                android:textColor="@color/whitesmoke"
                                android:textColorHint="@color/white"
                                android:id="@+id/regi_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textPassword"
                                android:textSize="16sp"
                                android:maxLines="1"
                                android:singleLine="true" />

                        </android.support.design.widget.TextInputLayout>
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:textColor="@color/whitesmoke"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/confirm_password"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content">

                            <EditText
                                android:backgroundTint="@color/whitesmoke"
                                android:textColor="@color/whitesmoke"
                                android:textColorHint="@color/white"
                                android:id="@+id/verify_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textPassword"
                                android:textSize="16sp"
                                android:maxLines="1"
                                android:singleLine="true" />

                        </android.support.design.widget.TextInputLayout>
                    </TableRow>
                </TableLayout>
                <Button
                    android:id="@+id/regi_ensure_btn"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="72dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginBottom="36dp"
                    android:background="@drawable/shapeblue"
                    android:text="注   册"
                    android:textColor="@color/whitesmoke"
                    android:textSize="16sp"
                    android:textStyle="bold" />
        </LinearLayout>
</ScrollView>

</RelativeLayout>
