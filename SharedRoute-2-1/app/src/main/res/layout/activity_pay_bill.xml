<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PayBillActivity">

    <include layout="@layout/back_layout"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="倒计时"
        android:gravity="center"
        android:layout_margin="8dp" />

    <ProgressBar
        android:id="@+id/pay_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
<ScrollView
    android:layout_weight="1"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
        android:id="@+id/pay_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/secondblock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorner"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/totalEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:inputType="textPersonName"
                    android:text="总计" />

                <EditText
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="left|bottom"
                    android:text="￥ 2.0"
                    android:textColor="#ff7f24"
                    android:textSize="24dp" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/greendot" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="left|center"
                        android:text="张三"
                        android:textColor="#000010"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center|left"
                        android:text="12345678"
                        android:textColor="#000030"
                        android:textSize="18dp"
                        app:layout_constraintHorizontal_bias="0.766"
                        app:layout_constraintLeft_toRightOf="@+id/textView4"
                        app:layout_constraintRight_toRightOf="@+id/secondblock"
                        app:layout_constraintTop_toBottomOf="@+id/totalEdit" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/purpledot" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center|left"
                        android:text="包裹类型" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center|left"
                        android:text="书籍（小件）"
                        android:textColor="#000000"
                        android:textSize="18dp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="12dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="80dp"
                        android:layout_height="36dp"
                        android:layout_margin="8dp"
                        android:gravity="center|left"
                        android:text="提货号码" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="123"
                        android:textColor="#000000"
                        android:textSize="18dp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/reddot" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="一区顺丰速运"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/dizhi" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:layout_marginLeft="4dp"
                        android:text="15公寓441"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="12dp"
                        android:src="@drawable/bluedot" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="14"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/qujianshijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="left|center"
                            android:text="取件时间" />

                        <TextView
                            android:id="@+id/pick_time"
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="top|left"
                            android:text="8月14日 12:30"
                            android:textColor="#9fb6cd"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"
                        android:background="#dedede" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/songjianshijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="left|center"
                            android:text="送件时间" />

                        <TextView
                            android:id="@+id/deliever_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="top|left"
                            android:text="8月15日 17:00"
                            android:textColor="#9fb6cd"
                            android:textSize="15dp" />

                    </LinearLayout>

                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/roundedcorner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    app:srcCompat="@mipmap/zhifubao" />

                <TextView
                    android:id="@+id/zhifubaotopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center|left"
                    android:text="支付宝支付"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dedede"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_margin="8dp"
                    app:srcCompat="@mipmap/wechat" />

                <TextView
                    android:id="@+id/wechattopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center|left"
                    android:text="微信支付 "
                    android:textColor="#000000"
                    android:textSize="20sp" />
                </LinearLayout>
        </LinearLayout>
            <RadioGroup
                android:id="@+id/paypath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/wechat"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </RadioGroup>


        </LinearLayout>

        <Button
            android:id="@+id/ensure_bill_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#ffc125"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="确认支付 ￥ 2.0"
            android:textColor="#ffffff"
            android:textSize="25sp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>
